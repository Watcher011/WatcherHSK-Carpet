<Defs>


	<ThingDef ParentName="AncientRugBase">
		<defName>DragonCarpet</defName>
		<label>Rug from Phoenix</label>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/DragonCapter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.8,1.8)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<costList>
			<Leather_FireDragonskin>20</Leather_FireDragonskin>
			<FeenixHead>1</FeenixHead>
		</costList>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(217,80,80,0)</glowColor>
			</li>
		</comps>
		<statBases>
		<Bulk>4</Bulk>
		<Mass>2</Mass>
	 <Beauty>5</Beauty>
      <Flammability>0.32</Flammability>
      <WorkToBuild>800</WorkToBuild>
      <CleaningTimeFactor>2</CleaningTimeFactor>
		</statBases>
		<size>(2,2)</size>
		<description>Carpet made from Phoenix skin is warm to the touch and glows a little in the dark!</description>
		<rotatable>true</rotatable>
	</ThingDef>


